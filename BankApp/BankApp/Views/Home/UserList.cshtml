@model List<BankApp.Models.ApplicationUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User List</h2>
<table style="width:100%; text-align:center" class="table-hover">
    <thead>
        <tr>
            <th style="text-align:center">Name</th>
            <th style="text-align:center">Email</th>
            <th style="text-align:center">Address</th>
        </tr>
        @foreach (var user in Model)
        {
            <tr onclick="location.href ='@(Url.Action("DetailsAdminView", "Home", new { id = user.Id }))'" style="cursor:pointer">
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Address</td>
            </tr>
        }
    </thead>
</table>
<br />
<input type="submit" value="BACK TO MAIN" onclick="location.href='@Url.Action("MainPage", "Home")'; return true"/>
